- push( user_details_banner )

-# header for user details page
-# http://0.0.0.0:3000/widgets/userDetailsBanner
%div[_]

	- imgBorder = 1
	- imgStyle = "margin-right: 15px; float: left; border:#{imgBorder}px solid lightgray"
	%a( href="#{_.userHomePageURL}" )
		%img( width='#{_.imgSize[0]-imgBorder*2}' height='#{_.imgSize[1]-imgBorder*2}' src='#{_.img}' alt='user_avatar' style="#{imgStyle}" )

	-# Overflow hidden makes sure the text doesn't wrap - is this reliable?
	%div( style='overflow: hidden;' )
		%div.bigType( style="font: normal normal 28px/30px Georgia;" )
			-# crazy stuff happening here, dont try to set the font on an anchor
			%a( href="#{_.userHomePageURL}" style="font-weight: normal; color: #be178b;") #{_.userName}

		%div.mediumType( style="font: normal normal 16px/30px Helvetica; margin-top:-20px; margin-bottom:-10px; padding:0;" )
			-# go thru stats hash
			- sparator = ' / '
			- first = true
			- _.stats.each_key do |key|
				- if first
					- first = false
				- else
					=sparator
				%a( href="#{_.stats[key][:url]}" style="font-weight: normal; margin:0px;" ) #{_.stats[key][:total]} #{key}

	%div( style="clear:both;" )
