		ABoo.NewHeadlessFlashPlayerSingleton = SC.Object.extend({
			_swfSrc: "HeadlessPlayer/lib/Debug/HeadlessPlayer",
			_headlessFlashOb: undefined,

			// create the backing swf
			init: function( /* init never has args */ ) {
				this._super();
				var flashURL = ABoo.HeadlessSharedFlashObject.uRLForSwf( this._swfSrc );

				// varoius autostart options here - load, play, etc.
				this._headlessFlashOb = ABoo.HeadlessSharedFlashObject.sharedSwfForURL( flashURL, 1, 1, {autostart:'play'} );
			},

			playerBecameCurrent: function( playerInstance, $pageItem ) {
				// NB, it only swaps in when fails to load due to flash blocker
				this._headlessFlashOb.swapInForItem( playerInstance, $pageItem );
			},


			// TODO: when you play we have to manually update playcount (first time thru only)
			//play: function(callback) {
				//this._headlessFlashOb._commandableSwf.setSwfAttribute( 'src', this._mp3URL );
				//this._headlessFlashOb._commandableSwf.load();

				//this._headlessFlashOb._commandableSwf.setAttribute( 'autoplay', true );
				//this._headlessFlashOb._commandableSwf.play();
			//},

			setSrc: function( mp3Url ) {
				if (!mp3Url) debugger;

				// TODO! check that we are loading the same url!

				this._headlessFlashOb._commandableSwf.setSwfAttribute( 'src', mp3Url );
				// this._commandableSwf.type = 'audio/mpeg';
				// this._commandableSwf.preload = "auto";

				// TODO: we need to append page location?
				this._headlessFlashOb._commandableSwf.load(); // force the audio to reset & start loading the new url
			},

			_getTimeRangeEnd: function( timeRanges, timeRangeIndex ) {
				return timeRanges[timeRangeIndex][1];
			},

			buffered: function() {

			  	var timeRanges = this._headlessFlashOb._commandableSwf.getNodeProperty('buffered');
			  	if(!timeRanges){
			  		console.log("Buffered attribute NOT found");
			  		return 0;
			  	}
			  	var endTime = 0;

			  	if( timeRanges.length )
				try {
					// Discount the possibility of multiple buffers for now (theoretically possible with range requests if the user skips forward, but Safari doesn't seem to support it)
					// and just return the proportion of buffered time
					var timeRangeIndex = timeRanges.length-1;
					endTime = this._getTimeRangeEnd( timeRanges, timeRangeIndex ); // implemented differently for flash and html5
				} catch(err) {
					alert(err);
					return 0;
				}
				return endTime;
			},

			duration: function() {
			  	return this._headlessFlashOb._commandableSwf.getNodeProperty('duration');
			},

			loadedDegrees: function() {
				var buffered = this.buffered();
				var duration =  this.duration();
				//console.log("<<<<< loadedDegrees "+buffered+" "+duration+" >>>>>>");
				return duration===0 ? 0 : (buffered / duration * 360);
			},

			playedDegrees: function() {
				var ct = this._headlessFlashOb._commandableSwf.getSwfAttribute('currentTime');
				var duration =  this.duration();
				return duration===0 ? 0 : (ct / duration * 360);
			},

			// TODO: when you play we have to manually update playcount (first time thru only) - sort out what happens when autoplay
			play: function() {
				this._headlessFlashOb._commandableSwf.play();
			},

			pause: function() {
				this._headlessFlashOb._commandableSwf.pause();
			}

		});

