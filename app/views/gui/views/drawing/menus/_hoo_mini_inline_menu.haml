- push( hoo_mini_inline_menu )

%div( class='hooMiniInlineMenu' style="overflow:auto; text-align: center; padding:0; margin:0; float: right;")
	- _.views.each_with_index do |view, i|
		%div( class='hooMiniInlineMenu_itemWrapper' style="font: normal normal 10px/15px Helvetica; background-color:transparent; display:inline-block; overflow: auto; float: left; padding: 0")
			= insert( view, "" )
		- if( i < (_.views.count-1))
			%div( class="hooMiniInlineMenu_spacer" style="display: inline-block; width: 1px; height: #{_.height}px; float:left")
				%div( style="width:1px; height:100%; background-color:#fff;")



