-# push( hoo_div_button_toggle )

-#
-# ok, ok, these double and single action things are the same, different javascript, yeah?
-#

- textStyle = "color:#{_.labelColor}; line-height:15px; padding:0; position:relative; top:15px;"
- button_attrs = { :style=>" text-align: center; padding:0; margin:0; border:none; background:transparent url( #{_.img} ) 0 #{_.size[1]*-_.initialState}px; width: #{_.size[0]}px; height:#{_.size[1]}px;" }
- if(  _.initialState==0 )
	- button_attrs.merge!( { :disabled=>"disabled" } )
	- button_attrs[:style] += "pointer-events:none;"
	- textStyle += "opacity:0.6;"
- else
	- textStyle += "text-shadow:0px -1px 0px #374683;"

%div[_]{ :data=> {'jsclass'=>'ABoo.HooDivButtonToggle'} }
	%div{button_attrs}
		%a.unselectable.sansSolidBold( href="#{_.action}" style="#{textStyle}" )
			-# Insert the correct label for this initialState
			#{_.labelStates[_.initialState]}

